@page "/not-found"
@layout MainLayout
@inject NavigationManager Navigation

<PageTitle>Page introuvable - TÉLUQ</PageTitle>

<div class="teluq-container" style="text-align: center; padding-top: 4rem;">
    <h1 class="mb-3" style="font-weight: 700;">404 - Page introuvable</h1>
    
    <p class="mb-4">
        Désolé, la page que vous tentez de consulter n'existe pas ou a été déplacée.
    </p>

    <button class="btn teluq-primary-btn px-4 py-2" @onclick="GoHome">
        Retourner au formulaire
    </button>
</div>

@code {
    private void GoHome()
    {
        // Redirects to the root (your Movie Form)
        Navigation.NavigateTo("/");
    }
}